<section class='tab {{tabs.effects.cssClass}} {{tabs.effects.id}}'
    data-tab='{{tabs.effects.id}}'
    data-group='{{tabs.effects.group}}'>
    {{#each effects as |section sid|}}
        <fieldset class="one-column">
            <legend>
                {{localize section.label}}
                <a class="effect-control" data-action="createEffect" data-tooltip="{{localize 'DOCUMENT.Create' type="Effect"}}">
                    <i class="fas fa-plus"></i>
                </a>
            </legend>
           <ul class="effect-list">
                {{#each section.effects as |effect|}}
                    <li class="item effect" data-effect-id="{{effect.id}}"
                        data-parent-id="{{effect.parent.uuid}}" data-parent-uuid="{{effect.parent.uuid}}">
                        <div class="effect-line">
                            <img class="image" src="{{effect.img}}" />
                            <h4>{{effect.name}}</h4>
                            <div class="controls">
                                <a class="effect-control" data-action="toggleEffect"
                                    data-tooltip="{{localize 'DAGGERHEART.Tooltip.toggleEffect'}}">
                                    <i class="fas {{#if effect.disabled}}fa-toggle-off{{else}}fa-toggle-on{{/if}}"></i>
                                </a>
                                <a class="effect-control" data-action="editEffect"
                                    data-tooltip="{{localize 'DAGGERHEART.Tooltip.edit'}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="effect-control" data-action="deleteEffect"
                                    data-tooltip="{{localize 'DAGGERHEART.Tooltip.delete'}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <div class="effect-description invisible">
                            {{{effect.description}}}
                        </div>
                    </li>
                {{/each}}
           </ul>
        </fieldset>
    {{/each}}
</section>